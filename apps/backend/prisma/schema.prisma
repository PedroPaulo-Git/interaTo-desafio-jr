generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  contact   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  animals   Animal[]
}

enum AnimalType {
  CAT
  DOG
}

model Animal {
  id    String     @id @default(uuid())
  name  String
  age   Int
  type  AnimalType
  breed String

  ownerId      String
  ownerName    String
  ownerContact String
  owner        User   @relation(fields: [ownerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
